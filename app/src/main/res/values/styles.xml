<resources>
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/appGreyLight</item>
    <item name="colorPrimaryDark">@color/appGrey</item>
    <item name="colorAccent">@color/appBlueLight</item>
  </style>

  <style name="ActionButtonStyle" parent="Widget.MaterialComponents.Button">
    <item name="android:insetTop">0dp</item>
    <item name="android:insetBottom">0dp</item>
    <item name="rippleColor">@color/semiTransparent</item>
    <item name="cornerRadius">8dp</item>
    <item name="android:gravity">center</item>
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:letterSpacing">0</item>
  </style>

</resources>